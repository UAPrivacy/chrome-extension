{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": ["airbnb", "eslint:recommended", "plugin:promise/recommended", "plugin:import/errors", "plugin:prettier/recommended", "plugin:jsx-a11y/recommended", "plugin:react/recommended"],
    "globals": {
        "chrome": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 8,
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "plugins": [
        "json",
        "promise",
        "import",
        "prettier",
        "jsx-a11y",
        "react"
    ],
    "rules": {
        "class-methods-use-this": 1,
        "import/no-extraneous-dependencies": 1,
        "import/no-unresolved": 1,
        "import/prefer-default-export": 1,
        "max-len": [
            2,
            {
                "code": 180
            }
        ],
        "no-await-in-loop": 1,
        "no-console": 0,
        "no-multiple-empty-lines": [
            2,
            {
                "max": 1,
                "maxBOF": 0,
                "maxEOF": 0
            }
        ],
        "no-restricted-globals": 1,
        "no-restricted-syntax": 1,
        "no-undef": 1,
        "no-unused-vars": 1,
        "no-use-before-define": 1,
        "prefer-destructuring": 1,
        "prefer-promise-reject-errors": 1,
        "react/no-array-index-key": 1,
        "react/jsx-one-expression-per-line": 0,
        "promise/always-return": 0,
        "promise/no-nesting": 0
    }
}