{
    "extends": "airbnb-base",
    "rules": {
        "no-console": 1,
        "indent": [
            "error",
            4
        ],
        "no-multiple-empty-lines": [
            2,
            {
                "max": 1,
                "maxBOF": 0,
                "maxEOF": 1
            }
        ],
        "no-use-before-define": 1,
        "no-unused-vars": 1,
        "max-len": [
            1,
            {
                "code": 180
            }
        ],
        "no-restricted-syntax": 1,
        "import/no-unresolved": 1,
        "no-restricted-globals": 1,
        "no-await-in-loop": 1,
        "no-undef": 1,
        "prefer-promise-reject-errors": 1,
        "class-methods-use-this": 1
    },
    "env": {
        "node": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 8
    }
}