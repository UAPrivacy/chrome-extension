{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": ["airbnb", "eslint:recommended", "plugin:promise/recommended", "plugin:import/errors", "plugin:prettier/recommended", "plugin:jsx-a11y/recommended", "plugin:react/recommended"],
    "globals": {
        "chrome": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 8,
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "plugins": [
        "json",
        "promise",
        "import",
        "prettier",
        "jsx-a11y",
        "react"
    ],
    "rules": {
        "no-console": 0,
        "react/jsx-one-expression-per-line": 0,
        "promise/always-return": 0,
        "promise/no-nesting": 0,
        "react/no-array-index-key": 0,
        "react/sort-comp": 0,
        "import/no-unresolved": 1
    }
}