{
    "env": {
        "browser": true
    },
    "extends": ["airbnb", "eslint:recommended", "plugin:promise/recommended", "plugin/json/error", "plugin:import/errors", "plugin:prettier/recommended"]  ,
    "globals": {
        "chrome": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 8
    },
    "plugins": [
        "json",
        "promise",
        "import",
        "prettier"
    ],
    "rules": {
        "class-methods-use-this": 1,
        "import/no-extraneous-dependencies": 1,
        "import/no-unresolved": 1,
        "import/prefer-default-export": 1,
        "max-len": [
            2,
            {
                "code": 180
            }
        ],
        "no-await-in-loop": 1,
        "no-console": 1,
        "no-multiple-empty-lines": [
            2,
            {
                "max": 1,
                "maxBOF": 0,
                "maxEOF": 0
            }
        ],
        "no-restricted-globals": 1,
        "no-restricted-syntax": 1,
        "no-undef": 1,
        "no-unused-vars": 1,
        "no-use-before-define": 1,
        "prefer-destructuring": 1,
        "prefer-promise-reject-errors": 1,
        "react/no-array-index-key": 1
    }
}